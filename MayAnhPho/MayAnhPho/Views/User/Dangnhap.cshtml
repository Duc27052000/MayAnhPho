@model MayAnhPho.Models.LoginModel

@{ ViewBag.Title = "Dangnhap";
                Layout = "~/Views/Shared/_LayoutShop.cshtml"; }



@using (Html.BeginForm("Dangnhap", "User", FormMethod.Post))
{
@Html.AntiForgeryToken()
                <div class="form-horizontal container" style="padding:50px">
                    <div style="width:100%; text-align:center; margin-top:30px;border-bottom-color: aliceblue;"></div>
                    <hr />
                    <div> <b style="padding-bottom: 20px;border-bottom: solid;border-bottom-color: aliceblue;">Hãy đăng nhập để sử dụng đầy đủ tính năng của Website</b></div>

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div style="margin-left: -112px;">
                        <table style="margin-left: 100px;">
                            <tr style="height:60px">
                                <td>
                                    @Html.LabelFor(model => model.userMail, htmlAttributes: new { @class = "control-label col-md-2" })
                                </td>
                                <td style="width:300px">
                                    @Html.EditorFor(model => model.userMail, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.userMail, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr style="height:60px">
                                <td>
                                    @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { type = "Password", @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                        </table>

                        <div class="fail" style="margin-left: 100px;color: red;margin-bottom: 10px;">
                            @ViewBag.Fail
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Đăng nhập" class="btn btn-default" style="border-radius: 0px;/* width: 100px; */color: white;background-color: #333;text-transform: uppercase;/* height: 30px; */" />
                            </div>

                        </div>
                    </div>

                </div>}

